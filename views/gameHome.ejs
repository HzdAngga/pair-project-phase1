<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <title>List of Games</title>
  </head>
  <body>
    <header>   
        <div class="navbar navbar-dark bg-dark shadow-sm">
          <div class="container d-flex justify-content-between">
            <a class="btn btn-primary" href="/user/<%= id %>" role="button">My Games</a>
            <a class="btn btn-primary" href="/" role="button">Logout</a>
          </div>
        </div>
    </header>
    <br>
    <br>
    <br>
    <br>
    <h1 style="text-align:center">Here the List!</h1> <br>
    <% if(alert) { %>
        <div class="alert alert-info" role="alert">
            <%= alert %>
        </div>
    <% } %>
    <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Preview</th>
            <th scope="col">Genre</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach(el => { %>
                <tr>
                  <td><%= el.name %></td>
                  <td><img src="<%= el.img %>" width="250" height="350" alt="preview"></td>
                  <td><%= el.genre %></td>
                  <td><a class="btn btn-danger" href="/game/<%= id %>/add/<%= el.id %>" role="button">Subscribe</a></td>
                </tr>
            <% }) %>
        </tbody>
      </table>
      
  </body>
</html>